<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Course</title>
    <%- include partial/header %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Edit Courset</h1>
          <button id="btn-back" onclick="window.location='/student'" class="btn btn-primary glyphicon glyphicon-fast-backward"> Back</button>
          <div>
            <form class="form-group has-success" name="mainForm" action="/course/edit/<%= data.id %>" method="post">
              <div class="container">
                <div>
                </div>
                <label><b>Id</b></label>
                <input class="form-control" type="text" name="id" value="<%= data.id %>" disabled/>
                <label><b>Couse Name</b></label>
                <input class="form-control" type="text" name="name" value="<%= data.course_name %>" />
                <label><b>Price</b></label>
                <input class="form-control" type="text" name="price" value="<%= data.price %>" />
                <br><br>
                <div class="clearfix">
                  <button type="submit" class="btn btn-primary glyphicon glyphicon-check">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
