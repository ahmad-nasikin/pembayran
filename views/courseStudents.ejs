<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subject Page</title>
    <%- include partial/header %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% if(dataCourse[0] === undefined){ %>
            <h1>Belum ada Peminat Pada Kursus INI !!!</h1>
            <button id="btn-back" onclick="window.location='/course'" class="btn btn-primary glyphicon glyphicon-fast-backward" > Kembali Kursus List</button>
            <% }else{ %>
              <h1>Data Course <%= dataCourse[0].Course.course_name %></h1>
            <div>
              <button id="btn-back" onclick="window.location='/course'"  class="btn btn-primary glyphicon glyphicon-fast-backward" > Back To Subject List</button><br><br>
              <table border="1" class="table table-hover table-bordered  table-striped">
                <tr class="success">
                  <th>No</th>
                  <th>Student Name</th>
                </tr>
                <%var no = 1; for(var i = 0 ; i < dataCourse.length; i++) {%>
                    <tr>
                      <td><%= no %><% no += 1 %></td>
                      <td><%= dataCourse[i].Student.name %></td>
                    </tr>
                <% } %>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
