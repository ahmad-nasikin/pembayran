<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Student Page</title>
    <%- include partial/header %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Edit Data Student</h1>
          <button id="btn-back" onclick="window.location='/student'" class="btn btn-primary glyphicon glyphicon-fast-backward"> Back</button>
          <div>
            <form class="form-group has-success" name="mainForm" action="/student/edit/<%= data.id %>" method="post">
              <div class="container">
                <div>
                  <% if(errmsg != ''){%>
                      <span><%= errmsg%></span>
                  <%}%>
                </div>
                <label><b>Id</b></label>
                <input class="form-control" type="text" name="id" value="<%= data.id %>" disabled/>
                <label><b>Name</b></label>
                <input class="form-control" type="text" name="name" value="<%= data.name %>" />
                <label><b>Gender</b></label>
                <input class="form-control" type="text" name="gender" value="<%= data.gender %>" />
                <label><b>Address</b></label>
                <input class="form-control" type="text" name="address" value="<%= data.address %>" />
                <label><b>Email</b></label>
                <input class="form-control" type="text" name="email" value="<%= data.email %>" />
                <input class="form-control" type="hidden" name="emailOri" value="<%= data.email %>">
                <br><br>
                <div class="clearfix">
                  <button type="submit" class="btn btn-primary glyphicon glyphicon-check">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
